{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path */
    "paths": {
      "@libs/components": ["./libs/components/index.ts"],
      "@libs/components/*": ["./libs/components/*"],
      "@libs/context": ["./libs/context/index.ts"],
      "@libs/context/*": ["./libs/context/*"],
      "@libs/design": ["./libs/design/index.ts"],
      "@libs/design/*": ["./libs/design/*"],
      "@libs/guards": ["./libs/guards/index.ts"],
      "@libs/guards/*": ["./libs/guards/*"],
      "@libs/hooks": ["./libs/hooks/index.ts"],
      "@libs/hooks/*": ["./libs/hooks/*"],
      "@libs/layouts": ["./libs/layouts/index.ts"],
      "@libs/layouts/*": ["./libs/layouts/*"],
      "@libs/services": ["./libs/services/index.ts"],
      "@libs/services/*": ["./libs/services/*"]
    }
  },
  "include": ["app", "libs"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
